<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ADC5C5C5"
    tools:context=".NewEvent">


    <TextView
        android:fontFamily="@font/sunday_best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="new event"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#8E0B1B"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_event_foreground"
        android:layout_gravity="center"
        >
    </ImageView>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Event name"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameOfEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>

<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="60dp">

    <Button
        android:onClick="date"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="date"
        android:textSize="15dp"
        android:backgroundTint="#8E0B1B"
        android:textStyle="bold"
        android:fontFamily="@font/lato_italic"
        />
    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00/00/0000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:onClick="time"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="time"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#8E0B1B"
        android:textStyle="bold"
        android:fontFamily="@font/lato_italic"
        />

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00:00"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"
            ></TextView>
    </LinearLayout>
</LinearLayout>





    <LinearLayout

        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    </LinearLayout>



    <Button
        android:onClick="save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="SAVE"
        android:textSize="15dp"
        android:backgroundTint="#5D7380"
        android:textStyle="bold"
        android:fontFamily="@font/sunday_best"
        />

    <Button
        android:onClick="cancel"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="CANCEL"
        android:textSize="15dp"
        android:backgroundTint="#5D7380"
        android:textStyle="bold"
        android:fontFamily="@font/sunday_best"
        />


</LinearLayout>