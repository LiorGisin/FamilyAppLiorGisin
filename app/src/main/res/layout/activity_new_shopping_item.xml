<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADC5C5C5"
    tools:context=".NewShoppingItem"
    android:orientation="vertical">


    <TextView
        android:id="@+id/titleShopping"
        android:fontFamily="@font/sunday_best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="new shopping item"
        android:textSize="25dp"
        android:textColor="#065926"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_shopping_foreground"
        android:layout_gravity="center"
        >
    </ImageView>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Type the item you need"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="How many?"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Choose type:"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_italic"
        android:textColor="#065926"
        ></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:text="food"
                android:layout_height="match_parent"
                android:layout_marginRight="20sp"></RadioButton>
            <RadioButton
                android:id="@+id/pharmacy"
                android:layout_width="match_parent"
                android:text="pharmacy"
                android:layout_height="match_parent"
                android:layout_marginRight="20sp"></RadioButton>
            <RadioButton
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:text="other"
                android:layout_height="match_parent"
                android:layout_marginRight="20sp"></RadioButton>
        </RadioGroup>
        >
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    </LinearLayout>



    <Button
        android:onClick="save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="SAVE"
        android:textSize="15dp"
        android:backgroundTint="#5D7380"
        android:textStyle="bold"
        android:fontFamily="@font/sunday_best"
        />

    <Button
        android:onClick="cancel"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="CANCEL"
        android:textSize="15dp"
        android:backgroundTint="#5D7380"
        android:textStyle="bold"
        android:fontFamily="@font/sunday_best"
        />




</LinearLayout>